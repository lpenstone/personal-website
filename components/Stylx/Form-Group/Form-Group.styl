@import '~@/assets/styles/variables'

.select__wrap
  position: relative
  margin-bottom: 10px

  &:before
    content: "\21A9"
    position: absolute 
    right: 10px
    bottom: 7px
    display: block
    z-index: 0

.select__label
  display: inline-block
  width: 100%
  font-size: 0.9em
  font-weight: bold

.select
  position: relative
  z-index: 1
  color: $copy
  font-family: $font-copy
  font-size: 1.0em
  background-color: transparent
  width: 100%
  border: 1px solid $form-border
  border-radius: 3px
  padding: 10px
  padding-right: 32px
  -moz-appearance:none /* Firefox */
  -webkit-appearance:none /* Safari and Chrome */
  appearance:none

  &:hover
    cursor: pointer

  &:focus
    border: 2px solid $form-border-focus
    outline: none
    padding: 9px

.mode--dark
  .select
    border-color: $form-border-dm
    color: $copy-dm

    &:focus
      border-color: $form-border-focus-dm

.group__fieldset
  outline: none
  border: 0
  padding: 0
  margin: 0
  margin-bottom: 10px

.group__legend
  font-size: 0.9em
  font-weight: bold
  margin-bottom: 5px

dump_media_cache()