@import '~@/assets/styles/variables'

$time = 0.4
$translate = 23px
$translate-mobile = 18px
$size-dot = 8px
$dots = $brand-xdark

.dots
  display: flex

  .dots__dot
    display: block
    width: $size-dot
    height: $size-dot
    border-radius: 50%
    border: 1px solid $dots
    opacity: 0.5
    background-color: transparent
    margin: 0 8px

    @media (max-width: 676px)
      margin: 0 5px

  &:not(.dots--right), &:not(.dots--left)
    .dots__dot
      &:nth-child(1), &:nth-child(7)
        transform: scale(0)

      &:nth-child(2), &:nth-child(6)
        transform: scale(1.0)

      &:nth-child(3), &:nth-child(5)
        transform: scale(1.3)

      &:nth-child(4)
        transform: scale(1.6)
        opacity: 0.7

  &.dots--right
    transition: all ($time)s ease-in-out
    transform: translate(- $translate)

    @media (max-width: 676px)
      transform: translate(- $translate-mobile)
    
    .dots__dot
      opacity: 0.5
      transition: all ($time)s ease-in

      &:nth-child(1), &:nth-child(2)
        transform: scale(0)

      &:nth-child(3), &:nth-child(7)
        transform: scale(1.0)

      &:nth-child(4), &:nth-child(6)
        transition: all ($time)s ease-in-out
        transform: scale(1.3)
        opacity: 0.5

      &:nth-child(5)
        transform: scale(1.6)
        opacity: 0.7

  &.dots--left
    transition: all ($time)s ease-in-out
    transform: translate($translate)

    @media (max-width: 676px)
      transform: translate($translate-mobile)

    .dots__dot
      opacity: 0.5
      transition: all ($time)s ease-in

      &:nth-child(6), &:nth-child(7)
        transform: scale(0)

      &:nth-child(1), &:nth-child(5)
        transform: scale(1.0)

      &:nth-child(2), &:nth-child(4)
        transition: all ($time)s ease-in-out
        transform: scale(1.3)
        opacity: 0.5

      &:nth-child(3)
        transform: scale(1.6)
        opacity: 0.7

.mode--dark
  .dots .dots__dot
    border-color: #FFFFFF
  

